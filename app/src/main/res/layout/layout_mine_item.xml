<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/mine_item_line_vertical">

        <ImageView
            android:id="@+id/mine_item_imageView"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/me_my_order" />

        <TextView
            android:id="@+id/mine_item_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@+id/mine_item_imageView"
            android:layout_toRightOf="@+id/mine_item_imageView"
            android:gravity="center_vertical"
            android:text="我的订单"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/right_arrow_small" />
    </RelativeLayout>

    <View
        android:id="@+id/mine_item_line_vertical"
        style="@style/line_vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp" />


</RelativeLayout>