<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="5dp">


    <CheckBox
        android:id="@+id/cart_item_checkbox"
        style="@style/cart_checkbox"
        android:checked="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cart_item_img"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="110dp"
            android:layout_height="110dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/cart_item_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/cart_item_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="right"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_horizontal"
                    android:text="Â¥20"
                    android:textColor="@color/crimson"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="250dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp">

                    <ImageView
                        android:id="@+id/cart_item_minus_img"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:src="@drawable/selector_cart_minus" />

                    <TextView
                        android:id="@+id/cart_item_count_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:background="@mipmap/cart_count_bg" />

                    <ImageView
                        android:id="@+id/cart_item_plus_img"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:src="@drawable/selector_cart_plus" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>